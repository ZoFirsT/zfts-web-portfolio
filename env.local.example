# Database Configuration
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net
MONGODB_DB=portfolio_blog

# Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=24h # Token expiry time

# SMTP Configuration
SMTP_HOST=meerai.stratusone.cloud
SMTP_PORT=465
SMTP_USER=admin@stratusone.cloud
SMTP_PASSWORD=your_smtp_password
CONTACT_EMAIL=contact@zfts.site
SMTP_SECURE=true

# Storage Configuration
USE_S3_STORAGE=false # Set to true to use S3 instead of local storage
LOCAL_STORAGE_PATH=./uploads # Path for local file storage

# AWS S3 Configuration (only needed if USE_S3_STORAGE=true)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_ENDPOINT=https://s3.ap-southeast-1.amazonaws.com

# Security Configuration
RATE_LIMIT_WINDOW=15 # Time window in minutes for rate limiting
RATE_LIMIT_MAX_REQUESTS=100 # Maximum requests per window
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Analytics Configuration
ENABLE_ANALYTICS=true # Set to false to disable analytics collection
DDOS_DETECTION_THRESHOLD=100 # Requests per minute threshold
ANALYTICS_RETENTION_DAYS=90 # Data retention period in days
